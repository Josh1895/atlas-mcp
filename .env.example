# ATLAS MCP Server Configuration
# Copy this file to .env and fill in your API keys

# Required: Gemini API Key (from https://ai.google.dev/)
GEMINI_API_KEY=your-gemini-api-key

# Required: Context7 API Key (from https://context7.com/)
CONTEXT7_API_KEY=your-context7-api-key

# Optional: SerpAPI Key for better web search (from https://serpapi.com/)
SERPAPI_API_KEY=your-serpapi-api-key

# Optional: Voting parameters
ATLAS_INITIAL_SAMPLES=10
ATLAS_MAX_SAMPLES=30
ATLAS_VOTING_K=3

# Optional: Rate limiting (prevents 429 errors)
# Max concurrent API requests (default: 3)
ATLAS_MAX_CONCURRENT_REQUESTS=3
# Delay between request starts in seconds (default: 0.5)
ATLAS_REQUEST_DELAY_SECONDS=0.5
# Base delay for retries with exponential backoff (default: 2.0)
ATLAS_RETRY_DELAY_BASE=2.0
# Max retry attempts per request (default: 5)
ATLAS_MAX_RETRIES=5

# Optional: Cost and timeout limits
ATLAS_MAX_COST_USD=2.0
ATLAS_TIMEOUT_MINUTES=15

# Optional: Model configuration
ATLAS_MODEL=gemini-3-flash-preview
ATLAS_TEMPERATURE=0.7
ATLAS_MAX_OUTPUT_TOKENS=8192
